{{#profileblocks}}
    <div class="profile-block p-relative ">

        <h3 class="heading"><i class="{{icon}} m-r-5"></i> {{sectionname}}</h3>
        <div class="body">
            <div class="view">
                {{#content}}
                    <div class="pb-content">
                        {{{content}}}
                    </div>
                {{/content}}
                {{#dttype}}
                    {{#properties}}
                        <dl class="dl-horizontal">
                            <dt>{{{label}}}</dt>
                            <dd>{{{value}}}</dd>
                        </dl>
                    {{/properties}}
                {{/dttype}}
                {{#listtype}}
                    <ul class="profilelist">
                        {{#properties}}
                            <li class="{{classes}}">
                                {{#url}}
                                <a href="{{{url}}}">
                                {{/url}}
                                {{{title}}}
                                {{#url}}
                                </a>
                                {{/url}}
                            </li>
                            {{{content}}}
                        {{/properties}}
                    </ul>
                {{/listtype}}
            </div>
        </div>
    </div>
{{/profileblocks}}
