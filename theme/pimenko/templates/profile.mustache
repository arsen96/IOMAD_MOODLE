<div id="region-main">
    <div class="main-content-area">
        <div id="profile-main" class="row">
            {{#user}}
                <div class="col-sm-4 col-lg-2">
                    <div class="profile-pic">
                        <div class="p-relative">
                            <img src="{{{picture}}}" class="img-responsive">
                            <div class="dropdown profilep-message">
                                {{#cansend}}
                                    <a href="{{{msgurl}}}" role="button"
                                       class="btn bgm-white bg-white btn-float active z-depth-1 waves-effect"
                                       href="{{{msgurl}}}">
                                <span>
                                    <span class="header-button-title">
                                        <i class="zmdi zmdi-comments"></i>
                                    </span>
                                </span>
                                    </a>
                                {{/cansend}}
                            </div>
                        </div>

                        <div class="profile-stat">
                            <h2>{{fullname}}</h2>
                            <ul class="vcard-details">
                                {{#carddetails}}
                                    <li class="vcard-detail">
                                        <i class="{{icon}}"></i> {{text}}
                                    </li>
                                {{/carddetails}}
                            </ul>
                        </div>
                    </div>
                </div>
            {{/user}}
            <div class="col-sm-8 col-lg-10">
                <div rol="tabpanel">
                    {{{content}}}
                </div>
            </div>
        </div>
    </div>
</div>
