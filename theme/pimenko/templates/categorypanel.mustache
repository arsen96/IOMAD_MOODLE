<div class="card">
    {{#cat_url}}
        <div class="card-header" id="heading{{id}}" role="tab">
            <h4 class="card-title">
                <a aria-controls="collapse{{id}}" aria-expanded="false" class="{{{linkclass}}}"
                   data-parent="#heading{{id}}" data-toggle="collapse" href="#{{collapse_id}}">
                    {{{name}}}
                </a>
                <div class="float-right">
                    <a href="{{{cat_url}}}" class="viewcat">
                        {{#str}}viewcat, theme_pimenko{{/str}}
                    </a>
                </div>
            </h4>
        </div>
        <div aria-expanded="{{expanded}}" aria-labelledby="heading{{id}}" class="collapse" id="{{collapse_id}}"
             role="tabpanel">
            <div class="card-block {{addclasses}}">
                {{{content}}}
                {{{additionalcontent}}}
            </div>
        </div>
    {{/cat_url}}
    {{#course_url}}
        <div class="card-header" id="heading{{id}}" role="tab">
            <a href="{{{course_url}}}">
                <h4 class="card-title">
                    {{{name}}}
                </h4>
            </a>
            <div class="coursecontent">
                {{{content}}}
            </div>
            {{{additionalcontent}}}
            <div class="float-right">
                <a href="{{{course_url}}}" class="btn btn-primary btn-sm">
                    {{#str}}viewcourse, theme_pimenko{{/str}}
                </a>
            </div>
        </div>
    {{/course_url}}
</div>
