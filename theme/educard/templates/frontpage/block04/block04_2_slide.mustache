<div id="block04-2-s" class="block04-2 educard-block educard-font">
    <div class="block04-bg block-start-end-space">
        <div class="container">
            <div class="educard-sub-title pt-40">
                <h6>{{block04headline}}</h6>
            </div>
            <div>
                <div class="h1">{{block04header}}<span> {{block04maintitle}}</span></div>
                <div class="educard-heading-line-left"></div>
            </div>
            <div class="mt-60">
                <div id="block04-2-slider" class="splide block04-2-slider text-center">
                    <a class="btn educard-btn text-white" href="{{block04buttonlink}}">{{block04button}}</a>
                    <div class="splide__track" >
                        <ul class="splide__list">
                            {{#block04}}
                            <li class="splide__slide">
                                <div class="block04-card educard-rounded shadow">
                                    <div class="single-project educard-rounded block04-2-bg-img-{{counter}}">
                                        <div class="project-inner educard-rounded">
                                            <a class="btn btn-md btn-warning text-white"  href="{{link}}"><h5>{{title}}</h5></a>
                                            <p>{{caption}}</p>
                                        </div>
                                    </div>
                                </div>
                            </li>   
                            {{/block04}} 
                        </ul>    
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
