{{#slider1}}
<div class="blockslider slider-1 educard-block educard-font">
    <div class="splide slider" id="splide_slide">
        <div class="splide__arrows">
            <button class="splide__arrow splide__arrow--prev {{nextprev}}">
                <svg
                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40">
                    <path d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"></path>
                </svg>
            </button><button class="splide__arrow splide__arrow--next {{nextprev}}">
                <svg
                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40" width="40" height="40">
                    <path d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"></path>
                </svg>
            </button>
        </div>

        <div class="splide__track">
            <ul class="splide__list">
                {{#slides}}
                <li class="splide__slide">
                    <div class="text-center">
                        {{#image}}
                            <img src="{{image}}" class="w-100 slide-img {{^slidershowheight}}full-page{{/slidershowheight}}" 
                                {{#slidershowheight}}height={{slidershowheight}}{{/slidershowheight}} alt="sld" loading="lazy">
                        {{/image}}
                        <div {{#slideropacity}}class="carousel-content-image" {{/slideropacity}}>
                        </div>
                        <div class="slide-text text-light {{textposition}}">
                            {{#title}}
                            <div class="slide-title text-uppercase educard-text-shadow h1 {{#textanimation}}display-none{{/textanimation}}">
                                {{{ title }}}
                            </div>
                            {{/title}}
                            {{#caption}}
                                <h4 class="slide-caption educard-text-shadow {{#textanimation}}display-none{{/textanimation}}">
                                    {{{ caption }}}
                                </h4>
                            {{/caption}}
                            {{#button}}
                            <div class="mt-3">
                                <a class="educard-btn btn" href="{{{buttonurl}}}" 
                                {{#buttonurlblank}} target="_blank"{{/buttonurlblank}}>
                                    {{{ button }}}
                                </a>
                            </div>
                            {{/button}}
                        </div>
                    </div>
                </li>
                {{/slides}}
            </ul>
        </div>
    </div>
</div>
<script>
    "use strict";
    /* Main slider settings   
       Setting parameters (like kenburns) are taken from mustache. 
    */
    var splideId = document.getElementById("splide_slide");
    if (splideId) {
        var var_nextprev = Number('{{nextprev}}');
        var var_autoplay = Number('{{autoplay}}');
        var var_pagination = Number('{{pagination}}');
        var var_textanimation = '{{textanimation}}';
        document.addEventListener('DOMContentLoaded', function () {
            let splide = new Splide('#splide_slide', {
                type: 'loop',
                autoplay: var_autoplay,
                pagination: var_pagination,
                perPage: 1,
                direction: document.dir,
            });
            var kenburns = '{{kenburns}}';
            splide.on('active', Slide => {
                const element = Slide.slide.querySelector('.slide-img');
                if (element) {
                    element.classList.add(kenburns);
                }
            });
            splide.on('inactive', Slide => {
                const element = Slide.slide.querySelector('.slide-img');
                if (element) {
                    element.classList.remove(kenburns);
                }
            });
            if (var_textanimation != '0') {
                splide.on('active', Slide => {
                    const element = Slide.slide.querySelector('.slide-title');
                    if (element) {
                        element.classList.add('tracking-in-expand-fwd', 'display-block');
                    }
                });
                splide.on('inactive', Slide => {
                    const element = Slide.slide.querySelector('.slide-title');
                    if (element) {
                        element.classList.remove('tracking-in-expand-fwd', 'display-block');
                    }
                });
                splide.on('active', Slide => {
                    const element = Slide.slide.querySelector('.slide-caption');
                    if (element) {
                        element.classList.add('tracking-in-expand-fwd', 'display-block');
                    }
                });
                splide.on('inactive', Slide => {
                    const element = Slide.slide.querySelector('.slide-caption');
                    if (element) {
                        element.classList.remove('tracking-in-expand-fwd', 'display-block');
                    }
                });
            }
            splide.mount();
        });
    }
</script>
{{/slider1}}
