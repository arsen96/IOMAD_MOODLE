<div id= "block03-1-s" class="block03-1 educard-block educard-font">
    <div class="block03-bg block-start-end-space">
        <div class="container">
            <div class="educard-sub-title">
                <h6>{{block03headline}}</h6>
            </div>
            <div>
                <div class="h1">{{block03header}}<span> {{block03maintitle}}</span></div>
                <div class="educard-heading-line-left"></div>
            </div>
            <div class="mt-60">
                <div id="block03-1-slider" class="splide block03-1-slider">
                    <div class="splide__track" >
                        <ul class="splide__list">
                            {{#block03}}
                            {{#empty_content}}
                            <li class="splide__slide">
                                <div class="d-flex align-items-center">
                                    <div class="item-icon">
                                        <a href="{{link}}"><i class="{{icon}} educard-rounded"></i></a>
                                    </div>
                                    <div class="pl-3">
                                        <h4><a href="{{link}}">{{title}}</a></h4>
                                        <div class="font-size-m">{{#shortentext}} 100, {{{caption}}} {{/shortentext}}</div>
                                    </div>
                                </div>
                            </li>
                            {{/empty_content}}
                            {{/block03}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
