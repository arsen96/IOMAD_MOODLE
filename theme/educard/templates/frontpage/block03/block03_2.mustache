<div id="block03-2" class="block03-2 educard-block educard-font">
    <div class="block03-bg block-start-end-space">
        <div class="container">
            <div class="educard-sub-title">
                <h6>{{block03headline}}</h6>
            </div>
            <div>
                <div class="h1">{{block03header}}<span> {{block03maintitle}}</span></div>
                <div class="educard-heading-line-left"></div>
            </div>
            <div class="row d-flex mt-60">
                {{#block03}}
                {{#empty_content}}
                <div class="col-lg-{{block03_grid}} col-md-6 mt-70 ">
                    <div class="features-card block-shadow educard-rounded">
                        <div class="card h-100 text-center">
                            <a href="{{link}}">
                                <div class="card-icon">
                                    <span class="count-text">{{count}}</span>
                                    <i class="{{icon}}"></i>
                                </div>    
                            </a>
                            <h4 class="p-1"><a href="{{link}}">{{title}}</a></h4>
                            <p class="p-1">{{#shortentext}} 100, {{{caption}}} {{/shortentext}}</p>
                        </div>
                    </div>
                </div>
                {{/empty_content}}
                {{/block03}}
            </div>
        </div>  
    </div> 
</div>	
