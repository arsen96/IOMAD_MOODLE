<div class="banner-2 educard-header-2 bg-img educard-block educard-font position-relative site-background-color-obs-1" 
            style="background-image: url({{imgbanner2}});">
    {{#banner2shape}}
    <div class="educard-shape">
        <img class="educard-shape-2" src="{{shape2}}" alt="shape-2">
        <img class="educard-shape-3" src="{{shape3}}" alt="shape-3">
    </div>
    {{/banner2shape}}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 col-lg-5 info-detail align-self-center">
                <div class="educard-sub-title text-dark">
                    <h6>{{banner2caption1}}</h6>
                </div>
                <div>
                    <div class="h1">{{banner2caption2}} <span> {{banner2caption3}}</span></div>
                    <div class="educard-heading-line-left"></div>
                </div>
                <h4 class="subtitle soft-color">{{banner2caption4}}</h4>
                <div class="educard-search">
                    <form action="/search/index.php" method="get">
                        <div class="form-group rounded site-background-color">
                            <i class="fa fa-search site-color"></i>
                            <input type="text" class="form-control" placeholder="{{banner2placeholder}}">
                            <button class="site-background-color rounded" type="submit">{{#str}}search, core{{/str}}</button>
                        </div>
                    </form>
                    <div class="ctgtext">{{banner2ctgtext}}</div>
                    <ul class="educard-search-list">
                        {{#banner2ctg}}
                        <li><a href="course/index.php?categoryid={{ctgid}}">{{ctgname}}</a></li>
                        {{/banner2ctg}}
                    </ul>
                </div>
            </div>
            <div class="col-md-6 col-lg-3"></div>
            {{#banner2styl1}}
                {{> theme_educard/frontpage/banner/course/course01 }}
            {{/banner2styl1}}
            {{#banner2styl2}}
                {{> theme_educard/frontpage/banner/course/course02 }}
            {{/banner2styl2}}
            {{#banner2styl3}}
                {{> theme_educard/frontpage/banner/course/course03 }}
            {{/banner2styl3}}
            {{#banner2styl4}}
                {{> theme_educard/frontpage/banner/course/course04 }}
            {{/banner2styl4}}            
        </div>
    </div>
</div>
