<div id="block07-3" class="block07-3 educard-block educard-font">
    <div class="block07-bg block-start-end-space">
        <div class="container">
            <div class="educard-sub-title">
                <h6>{{block07headline}}</h6>
            </div>
            <div>
                <div class="h1">{{block07header}}<span> {{block07maintitle}}</span></div>
                <div class="educard-heading-line-left"></div>
            </div>
            <div class="row mt-60">
                {{#block07}}
                <div class="col-lg-4 col-md-6 col-12">
                    <div class="block07-3-single-course educard-rounded">
                        {{#block07imgenabled}}
                        <div class="course-head overlay text-center educard-rounded">
                            <img src="{{{imgurl}}}" alt="#">
                            <a href="{{categorylink}}" class="block07-3-btn">{{categoryName}}</a>
						</div>
                        {{/block07imgenabled}}
                        <div class="course-body h-100">
                            <div class="name-price">
                                <div class="teacher-info">
                                    {{#teachername}}
                                    {{{userpicture}}}
                                    <h4 class="title">{{{teachername}}}</h4>
                                    {{/teachername}}
                                </div>
                                {{#block07priceshow}}
                                <span class="price">{{cost}} {{currency}}</span>
                                {{/block07priceshow}}
                            </div>
                            <div class="course-body-text">
                                <h4 class="c-title {{^teachername}}c-title-mrg {{/teachername}}
                                {{#block07shortname}}text-truncate-1{{/block07shortname}}
                                {{#block07fullname}}text-truncate-2{{/block07fullname}}">
                                    <a href="{{courselink}}">
                                        {{#block07shortname}}{{shortname}}{{/block07shortname}}
                                        {{#block07fullname}}{{fullname}}{{/block07fullname}}
                                    </a>
                                </h4>
                                {{#block07shortname}}
                                <div class="p-class text-truncate-4">{{#shortentext}} 170, {{{summary}}} {{/shortentext}}</div>
                                {{/block07shortname}}
                                {{#block07fullname}}
                                <div class="p-class text-truncate-3">{{#shortentext}} 150, {{{summary}}} {{/shortentext}}</div>
                                {{/block07fullname}}
                            </div>
                        </div>
                        <div class="course-meta">
                            <div class="course-info">
                                <span data-toggle="tooltip" data-placement="top" title="{{#str}}block07tooltipenrolled, theme_educard{{/str}}">
                                    <i class="fa fa-users"></i>{{studentscount}}
                                </span>
                                <span class="float-right" data-toggle="tooltip" data-placement="top" title="{{#str}}block07tooltiplastdate, theme_educard{{/str}}">
                                    <i class="fa fa-calendar"></i>{{update}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                {{/block07}}
            </div>
            <div class="text-center mt-3">
                {{#block07button}}
                <a class="educard-btn btn mt-3 text-white border-0" href="{{block07buttonlink}}">
                    <span>{{block07button}}</span>
                </a>
                {{/block07button}}
            </div>
        </div>
    </div>
</div>        
