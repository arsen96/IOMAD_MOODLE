<div id="block12-2" class="block12-2 educard-block educard-font">
    <div class="block12-bg block-start-end-space">
        <div class="container">
            <div class="educard-sub-title">
                <h6>{{block12headline}}</h6>
            </div>
            <div>
                <div class="h1">{{{block12header}}} <span>{{block12maintitle}}</span></div>
                <div class="educard-heading-line-left"></div>
            </div>
            <div class="row mt-60 educard-video-block">
                {{#block12}}
                <div class="col-lg-6">
                    <div class="card border-0 mb-4">
                        <div class="row no-gutters frame block-shadow block-hover-shadow educard-rounded">
                            <div class="col-md-6 rounded-left video-back">
                                <img {{# block12image }} src="{{{block12image}}}"  {{/ block12image }}
                                    {{^ block12image }} src="{{frontpageimglink}}block12/d2/{{block12count}}.jpg" {{/ block12image }}
                                    alt="img"/>
                            </div>
                            <div class="play-btn">
                                <a href="#block122Modal{{block12count}}" data-toggle="modal">
                                    <i aria-hidden="true" class="fa fa-play-circle-o"></i>
                                </a>
                            </div>
                            <div class="col-md-6">
                                <div class="card-body h-100">
                                    <h4 class="soft-color">{{block12title}}</h4>
                                    <div class="category-bg row mt-3 ml-1">
                                        <i class="{{block12icon}}"></i>
                                        <h6 class="font-weight-600"><a href="#" class="category mt-2"> {{block12caption}}</a></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="block122Modal{{block12count}}" class="modal block12modal fade">
                    <div class="modal-dialog modal-lg">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <div class="modal-content">
                            <div class="modal-body">
                                {{#youtube}}
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe class="embed-responsive-item" title="video" width="650" src="{{{link}}}" allowfullscreen>
                                    </iframe>
                                </div>
                                {{/youtube}}
                                {{#vimeo}}
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe src="{{{link}}}" width="650" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen>
                                    </iframe>
                                </div>    
                                {{/vimeo}}
                                {{#custom}}
                                <div class="embed-responsive embed-responsive-16by9">
                                    <video id="videoModal{{block12count}}" controls muted playsinline width="650"> 
                                        <source src="{{{link}}}"  type="video/mp4">
                                    </video>
                                </div>
                                {{/custom}}
                            </div>
                        </div>
                    </div>
                </div>
                {{/block12}}
            </div>
        </div>
    </div>
</div>
