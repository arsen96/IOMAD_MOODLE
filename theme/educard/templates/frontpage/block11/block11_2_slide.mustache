<div id="block11-2-s" class="block11-2 educard-block educard-font">
    <div class="block11-bg block-start-end-space">
        <div class="container">
            <div class="educard-sub-title">
                <h6>{{block11headline}}</h6>
            </div>
            <div>
                <div class="h1">{{{block11header}}} <span>{{block11maintitle}}</span></div>
                <div class="educard-heading-line-left"></div>
            </div>
            <div class="mt-60">
                <div id="block11-2-slider" class="splide block11-2-slider" >
                    <div class="splide__track" >
                        <ul class="splide__list">
                            {{#block11}}
                            <li class="splide__slide">
                                <div class="block11-2-blog card block-shadow block-hover-shadow border-0 ">
                                    <a class="block11-2-blog-img educard-rounded" href="{{postURL}}">
                                        {{#imgurl}}
                                        <img src="{{{imgurl}}}" alt="img">
                                        {{/imgurl}}
                                    </a>
                                    <div class="block11-2-blog-tag">
                                        {{{tag}}}
                                    </div>
                                    <div class="card-body">
                                        <h4 class="block11-2-blog-title mt-1"> 
                                            <a href="{{postURL}}"> {{subject}} </a>
                                        </h4> 
                                    </div>
                                    <div class="block11-2-author-blog">
                                        <div class="img-bg"></div>
                                        {{{userpicture}}}
                                        <div class="user-name">
                                            <span>{{#str}} author, search {{/str}}</span><br>
                                            <span> {{{username}}}</span>
                                        </div>    
                                    </div>
                                    <div class="card-footer d-flex justify-content-between soft-color font-weight-500">
                                        <span class="block11-2-blog-date">
                                            <i class="fa fa-calendar-o" aria-hidden="true"></i>
                                            {{{shortdate}}}
                                        </span>
                                        <div class="block11-2-blog-read-btn d-flex">
                                            <a href="{{postURL}}" class="block11-2-link-btn">
                                                {{#str}} readme, moodle {{/str}}
                                                <i aria-hidden="true" class="fa fa-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{/block11}}
                        </ul>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
