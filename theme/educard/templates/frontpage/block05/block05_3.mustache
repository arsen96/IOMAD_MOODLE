<div id="block05-3" class="block05-3 educard-block educard-font">
    <div class="block05-bg block-start-end-space">
        <div class="container-fluid">
            <div class="container">
                <div class="educard-sub-title">
                    <h6>{{block05headline}}</h6>
                </div>
                <div>
                    <div class="h1">{{block05header}}<span> {{block05maintitle}}</span></div>
                    <div class="educard-heading-line-left"></div>
                </div>
                <div class="row mt-60">
                    <div class="col-lg-4 mb-4" style="min-height: 350px;">
                        <div class="position-relative h-100">
                            <img class="position-absolute w-100 h-100 rounded" 
                                {{# block05image }}
                                src="{{block05image}}"
                                {{/ block05image }}
                                {{^ block05image }}
                                src="{{frontpageimglink}}block05/d3/1.jpg"
                                {{/ block05image }}
                                style="object-fit: cover;" alt="block05image">
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="row">
                            {{#block05}}
                            <div class="col-sm-12 col-md-6 mb-5">
                                <div class="bg-color-{{count}} block05-3-icon rounded d-flex align-items-center justify-content-center mb-3" 
                                    style="width: 60px; height: 60px;">
                                    <a href="{{link}}">
                                        <i class="{{icon}} text-white" style="font-size: 25px;"></i>
                                    </a>
                                </div>
                                <a href="{{link}}">
                                    <h4>{{title}}</h4>
                                </a>    
                                <p class="mb-0">{{#shortentext}} 100, {{{caption}}} {{/shortentext}}</p>
                            </div>
                            {{/block05}}
                        </div>
                    </div>    
                </div>
            </div>
        </div>
    </div>
</div>
