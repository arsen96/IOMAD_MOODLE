{{!
    @template local_fullpage/head

    Fullpage head template.
}}
{{#pagecss}}
    <script>
        "use strict";
        var style = document.createElement('style');
        style.innerHTML = `{{{pagecss}}}`;
        document.head.appendChild(style);
    </script>
{{/pagecss}}
{{#pagecsslink}}
    <script>
        "use strict";
        var link = document.createElement('link'); 
            link.rel = 'stylesheet'; 
            link.type = 'text/css';
            link.href = '{{{pagecsslink}}}'; 
        document.getElementsByTagName('head')[0].appendChild(link); 
    </script> 
{{/pagecsslink}}

{{^pagenavbar}}
    <script>
        "use strict";
        var style = document.createElement('style');
        style.innerHTML = '.navbar { display: none; } #nav-drawer { display: none; } body.drawer-open-left { margin-left: 0px; }';
        document.head.appendChild(style);
    </script>    
{{/pagenavbar}}
{{^pageheader}}
    <script>
        "use strict";
        var style = document.createElement('style');
        style.innerHTML = '#page-header { display: none; } #page-footer-frontpage { display: none; }';
        document.head.appendChild(style);
    </script> 
{{/pageheader}}

{{#pagefooter}}
    <script>
        "use strict";
        var style = document.createElement('style');
        style.innerHTML = '#page-footer-frontpage {display: block;}';
        document.head.appendChild(style);
    </script>            
{{/pagefooter}}

{{^pagefooter}}
    <script>
        "use strict";
        var style = document.createElement('style');
        style.innerHTML = '#page-footer {display: none;}';
        document.head.appendChild(style);
    </script>            
{{/pagefooter}}
